{
  "name": "www",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "start:dev": "node --require babel-register app.js",
    "test": "mocha --exit --ui bdd --reporter spec --require babel-register ./services/api/tests/setup.js ./services/api/tests/**/*.test.js ./services/api/tests/*.test.js",
    "test:coverage:dev": "nyc --reporter=text mocha --exit --ui bdd --reporter spec --require babel-register ./services/api/tests/setup.js ./services/api/tests/**/*.test.js ./services/api/tests/*.test.js",
    "precommit": "lint-staged"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "ajv": "6.5.3",
    "amqplib": "0.5.2",
    "axios": "0.18.0",
    "bluebird": "3.5.1",
    "bunyan": "1.8.12",
    "bunyan-stdout-stream": "^1.5.1",
    "cheerio": "0.22.0",
    "config": "1.31.0",
    "dotenv": "6.0.0",
    "jsonwebtoken": "8.3.0",
    "koa": "2.5.2",
    "koa-bodyparser": "4.2.1",
    "koa-morgan": "1.0.1",
    "koa-passport": "4.1.1",
    "koa-router": "7.4.0",
    "lodash": "4.17.11",
    "moment": "2.22.2",
    "mongoose": "5.2.9",
    "mongoose-paginate": "5.0.3",
    "passport": "0.4.0",
    "passport-jwt": "4.0.0",
    "passport-local": "1.0.0",
    "umetrics": "^1.0.4",
    "uuid": "3.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/register": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-syntax-object-rest-spread": "^6.13.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "eslint": "^4.19.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-import": "^2.8.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "mocha": "^5.2.0",
    "mockgoose": "^7.3.5",
    "nyc": "^13.0.1",
    "prettier": "^1.15.3"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix --ignore-path .gitignore",
      "prettier --write",
      "git add"
    ]
  },
  "nyc": {
    "include": [
      "services/api/**/*.js"
    ],
    "exclude": [
      "**/*.test.js",
      "services/api/tests/setup.js",
      "services/api/routes",
      "services/api/app.js",
      "services/api/passport.js"
    ],
    "all": true
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "eslint-config-airbnb-base"
    ],
    "parser": "babel-eslint",
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "./**/*.test.js",
            "./**/tests/setup.js"
          ]
        }
      ],
      "no-multi-spaces": 0,
      "no-param-reassign": "warn",
      "no-underscore-dangle": "warn",
      "indent": [
        "error",
        "tab"
      ],
      "no-tabs": 0,
      "key-spacing": [
        "error",
        {
          "align": {
            "beforeColon": false,
            "afterColon": true,
            "on": "colon"
          }
        }
      ],
      "spaced-comment": 0,
      "no-trailing-spaces": 0,
      "no-restricted-syntax": "warn",
      "arrow-body-style": [
        1,
        "as-needed"
      ]
    }
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          },
          "useBuiltIns": "usage",
          "loose": true
        }
      ]
    ],
    "plugins": [
      [
        "syntax-object-rest-spread"
      ]
    ]
  }
}
